# Minimal config for Arianna Method Linux Kernel
CONFIG_INIT_ENV_ARG_LIMIT=32               # //: bound argv and envp length
CONFIG_OVERLAY_FS=y                        # //: overlayfs for layered storage
CONFIG_EXT4_FS=y                           # //: ext4 as persistent volume
CONFIG_CGROUPS=y                           # //: resource control primitives
CONFIG_NAMESPACES=y                        # //: process isolation domains
CONFIG_BLK_DEV_INITRD=y                    # //: allow initramfs loading
CONFIG_DEVTMPFS=y                          # //: maintain device tree in memory
CONFIG_DEVTMPFS_MOUNT=y                    # //: auto-mount devtmpfs at boot
CONFIG_TMPFS=y                             # //: temporary in-memory fs
CONFIG_TMPFS_POSIX_ACL=y                   # //: ACL semantics on tmpfs
CONFIG_UNIX=y                              # //: UNIX domain socket support
CONFIG_DRM=n                               # //: disable Direct Rendering Manager
CONFIG_DRM_KMS_HELPER=n                    # //: disable KMS helpers
CONFIG_FB=n                                # //: disable framebuffer devices
CONFIG_VGA_ARB=n                           # //: disable VGA arbitration
CONFIG_VGA_CONSOLE=n                       # //: disable VGA text console
